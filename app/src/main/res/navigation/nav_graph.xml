<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.todo.mvvm.view.fragment.DogListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_dog_list">
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.todo.mvvm.view.fragment.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_dog_details">
        <argument
            android:name="dogName"
            app:argType="string" />
    </fragment>
</navigation>