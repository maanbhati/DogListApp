<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DogListApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- List Style -->
    <style name="Dog" />

    <style name="Dog.ViewStyle">
        <item name="android:layout_marginTop">@dimen/normal_padding</item>
        <item name="android:layout_marginBottom">@dimen/card_elevation</item>
    </style>

    <style name="Dog.Image">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Dog.TextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyleSmall" parent="Dog.TextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextStyleMedium" parent="Dog.TextStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextStyleLarge" parent="Dog.TextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
</resources>